<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="rounded p-3 shadow">
        <h3>Creez votre fiche</h3>
        <%= simple_form_for([@casesiot, @customer], :defaults => { :input_html => { :class => "text-color" } }) do |f| %>
          <%= f.input :company_name %>
          <%= f.input :address %>
          <%= f.input :phone %>
          <%= f.input :contact_first_name %>
          <%= f.input :contact_last_name %>
          <%= f.input :role %>
          <%= f.input :company_type %>
          <%= f.input :siret %>
          <%= f.input :sector %>
          <%= f.submit class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
