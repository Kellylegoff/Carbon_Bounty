  <div class="row justify-content-center">
    <div class="col-lg-5 m-2">
      <div class="rounded p-3 shadow">
        <h3>Creez votre fiche</h3>
        <%= simple_form_for([@casesiot, @customer], :defaults => { :input_html => { :class => "text-color" } }) do |f| %>
          <%= f.input :company_name %>
          <%= f.input :address %>
          <%= f.input :phone %>
          <%= f.input :contact_first_name %>
          <%= f.input :contact_last_name %>
          <%= f.input :role %>
          <%= f.input :company_type %>
          <%= f.input :siret %>
          <%= f.input :sector %>
          <%= f.submit "CrÃ©er la fiche", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
