        <%= @casesiot.iotproduct.product_name%>
        <h3>Type</h3>
        <%= @casesiot.iotproduct.product_type%>
        <h3>Constructeur</h3>
        <%= @casesiot.iotproduct.constructor%>
        <h3>Description</h3>
        <%= @casesiot.iotproduct.description%>
