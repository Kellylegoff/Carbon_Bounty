    <%= javascript_packs_with_chunks_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
  </head>

  <body>
  <%= render 'shared/navbar' %>
  <div class="wrapper">

    <%= render 'shared/flashes' %>
    <%= yield %>

  </div>
  <%= render 'shared/footer' %>


  </body>
</html>
