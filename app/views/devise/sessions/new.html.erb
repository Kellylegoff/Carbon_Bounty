  <div class="row justify-content-center">
    <div class="col-12 col-sm-4 my-3 p-3 form-login">
      <h2>Se connecter</h2>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), :defaults => { :input_html => { :class => "text-color" } }) do |f| %>
            <div class="form-inputs">
              <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
              <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
              <%# <%= f.input :se_souvenir_de_moi, as: :boolean if devise_mapping.rememberable? %>
            </div>

                <div class="form-actions">
                  <%= f.button :submit, "Se connecter", class: "btn-black" %>
                </div>
            <% end %>


          <%= render "devise/shared/links" %>
    </div>
  </div>
