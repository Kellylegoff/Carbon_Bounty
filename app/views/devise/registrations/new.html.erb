<div class="home-container">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-4 my-3 form-login">
      <h2>Créer un compte</h2>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), :defaults => { :input_html => { :class => "text-color bg-white" } }) do |f| %>
          <%= f.error_notification %>

            <div class="form-inputs">
              <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "Votre email" }%>
              <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} caractères minimum" if @minimum_password_length),
                input_html: { autocomplete: "Nouveau Mot de Passe" } %>
              <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "Nouveau Mot de Passe" } %>
            </div>

                <div class="form-actions">
                  <%= f.button :submit, "S'inscrire", class: "btn-green" %>
                </div>
            <% end %>

          <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
